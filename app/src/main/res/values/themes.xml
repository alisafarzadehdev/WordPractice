<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RoomDB" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="text" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/iransansweb</item>
        <item name="android:textColor">@color/three</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="check" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="colorAccent">#ff55ff</item>
        <item name="android:textColorSecondary">#14ff56</item>
    </style>

    <style name="spinnerTheme" parent="Widget.AppCompat.Spinner">
        <item name="color">@color/four</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:itemBackground">@color/four</item>
        <item name="android:popupAnimationStyle">@color/white</item>
    </style>

    <style name="MyCustomTextInputStyle" parent="Widget.Design.TextInputLayout">
        <item name="android:textColorHint">@color/three</item>
        <item name="colorPrimary">#f00000</item>
        <item name="colorSecondary">#f0f050</item>
        <item name="colorAccent">#1bf450</item>

    </style>

    <style name="EditTextHint" parent="Widget.AppCompat.EditText">
        <item name="colorAccent">@android:color/white</item>
        <item name="android:textColorHint">@color/four</item>
        <item name="colorControlNormal">@color/first</item>
        <item name="colorControlActivated">@color/twe</item>
        <item name="colorControlHighlight">@color/one</item>
    </style>

    <style name="EditTextHintt" parent="Widget.Design.TextInputLayout">
        <item name="colorAccent">@android:color/white</item>
        <item name="android:textColorHint">@color/four</item>
        <item name="colorControlNormal">@color/first</item>
        <item name="colorControlActivated">@color/twe</item>
        <item name="colorControlHighlight">@color/one</item>
    </style>

    <style name="MyTextInputLayout" parent="Widget.Design.TextInputLayout">
        <!-- border color -->
        <item name="boxStrokeColor">@color/first</item>

        <!-- The color of the label when it is collapsed and the text field is active -->
        <item name="hintTextColor">@color/four</item>
        <!-- The color of the label in all other text field states (such as resting and disabled) -->
        <item name="android:textColorHint">@color/one</item>
    </style>

    <style name="MyCustomEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">#c47566</item>
        <item name="android:color">#c47566</item>
        <item name="android:colorForeground">#c47566</item>
        <item name="fontFamily">@font/iransansweb</item>
        <item name="colorPrimary">@color/twe</item>
    </style>

</resources>